<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_145sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@color/colorPrimary"
    android:fadingEdge="horizontal"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10sdp">


    <!--    android:weightSum="3"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.1"
            android:background="#03543465">

            <!--        android:background="@color/design_default_color_primary"-->

            <ImageView
                android:id="@+id/image_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/toast">

            </ImageView>
        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="2.0"
            android:elevation="@dimen/_200sdp">

            <!--        android:background="@color/colorAccent"-->

            <TextView
                android:id="@+id/txt_Title"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Biryani"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp" />

            <TextView
                android:id="@+id/txt_SEO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_Title"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Deliciously Cooked like Home"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_rsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txt_Title"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_toEndOf="@id/txt_Title"
                android:layout_toRightOf="@id/txt_Title"
                android:text="Rs:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txt_Title"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toEndOf="@+id/txt_rsLabel"
                android:layout_toRightOf="@id/txt_rsLabel"
                android:text="150"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_addToCart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/txt_SEO"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/btn_background"
                android:text="Add to Cart"
                android:textAllCaps="true"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>