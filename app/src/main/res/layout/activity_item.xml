<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ItemActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ItemActivity_imageContainer"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:alpha="0.9"
            android:scaleType="centerCrop"
            android:src="@drawable/karahi" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/ItemActivity_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_name"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="1"
        />

    <View
        style="@style/Divider"
        android:layout_marginTop="25dp"/>


    <View
        style="@style/Divider" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/quantity_decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:text="-" />

        <TextView
            android:id="@+id/quantity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:inputType="numberDecimal"
            android:textAlignment="center"

            android:layout_gravity="center"
            android:text="0"/>

        <Button
            android:id="@+id/quantity_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:text="+"/>
    </LinearLayout>


    <TextView
        android:id="@+id/ItemActivity_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_price"
        android:textAlignment="center"
        android:textColor="@color/TextColor"
       android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/addOrderItemBtn"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:background="@drawable/roundededgesbtn"
        android:text="@string/order_item"
        android:textAlignment="center"


        android:textColor="@color/ButtonTextColor" />
</LinearLayout>