<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="397dp"
        android:layout_height="fill_parent"
        android:layout_marginStart="0sp"
        android:layout_marginTop="0sp"
        android:layout_marginEnd="0sp"
        android:layout_marginBottom="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/lpLogin"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32sp"
                android:layout_marginTop="68sp"
                android:layout_marginEnd="32sp"
                android:background="@drawable/roundededgesbtn"


                android:onClick="Login"
                android:text="Login"
                android:textColor="@color/ButtonTextColor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password_login" />

            <Button
                android:id="@+id/lpSignUp"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32sp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="32sp"
                android:background="@drawable/roundededgesbtn"

                android:onClick="openMenu"
                android:text="Show Menu"
                android:textColor="@color/ButtonTextColor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lpLogin" />

            <ImageView
                android:id="@+id/ResLogoImg"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_marginStart="8sp"
                android:layout_marginTop="50sp"
                android:layout_marginEnd="8sp"
                app:layout_constraintBottom_toTopOf="@+id/lptextView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/chef" />


            <TextView
                android:id="@+id/lptextView5"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginTop="244sp"
                android:layout_marginEnd="8sp"

                android:fontFamily="sans-serif-black"
                android:text="AROMS"
                android:textAlignment="center"
                android:textColor="@color/ButtonTextColor"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="308dp"
                android:text="You Eat We Serve!"
                android:textAlignment="center"
                android:textColor="@color/ButtonTextColor"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_login"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32sp"
                android:layout_marginTop="24sp"
                android:layout_marginEnd="32sp"
                android:background="@color/colorPrimaryDark"

                android:drawablePadding="8sp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="7sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textColor="@color/ButtonTextColor"
                android:textColorHighlight="@color/ButtonTextColor"
                android:textColorHint="@color/ButtonTextColor"
                android:textColorLink="@color/ButtonTextColor"
                android:textCursorDrawable="@color/ButtonTextColor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_login"
                android:paddingLeft="7sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_login"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32sp"
                android:layout_marginTop="60sp"
                android:layout_marginEnd="32sp"
                android:background="@color/colorPrimaryDark"

                android:drawablePadding="8sp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="7sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textColor="@color/ButtonTextColor"
                android:textColorHighlight="@color/ButtonTextColor"
                android:textColorHint="@color/ButtonTextColor"
                android:textColorLink="@color/ButtonTextColor"
                android:textCursorDrawable="@color/ButtonTextColor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lptextView5" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>