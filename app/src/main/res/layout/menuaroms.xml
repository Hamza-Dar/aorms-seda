<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="654dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/colorPrimary"
            android:fadingEdge="horizontal"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/_10sdp">


            <!--    android:weightSum="3"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:background="#FFFFFF">

                    <!--        android:background="@color/design_default_color_primary"-->

                    <ImageView
                        android:id="@+id/image_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/toast">

                    </ImageView>

                </FrameLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.0"
                    android:elevation="@dimen/_200sdp">

                    <!--        android:background="@color/colorAccent"-->

                    <TextView
                        android:id="@+id/txt_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Biryani"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_SEO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_Title"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Deliciously Cooked like Home"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_rsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_SEO"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Rs."
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_SEO"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/txt_rsLabel"
                        android:text="150"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_SEO"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/txt_amount"
                        android:text="Per Serving including discount."
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_addToCart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/txt_message"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/roundededgesbtn"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Add to Cart"
                        android:textAllCaps="true"
                        android:textColor="@color/ButtonTextColor"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/colorPrimary"
            android:fadingEdge="horizontal"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/_10sdp">


            <!--    android:weightSum="3"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:background="#FFFFFF">

                    <!--        android:background="@color/design_default_color_primary"-->

                    <ImageView
                        android:id="@+id/image_menu2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/toast">

                    </ImageView>

                </FrameLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.0"
                    android:elevation="@dimen/_200sdp">

                    <!--        android:background="@color/colorAccent"-->

                    <TextView
                        android:id="@+id/txt_Title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Pizza"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_SEO2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_Title2"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Deliciously Cooked like Home"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_rsLabe2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_SEO2"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Rs."
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_amount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_SEO2"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/txt_rsLabe2"
                        android:text="350"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_message2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_SEO2"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/txt_amount2"
                        android:text="Per Serving including discount."
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_addToCart2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/txt_message2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/roundededgesbtn"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Add to Cart"
                        android:textAllCaps="true"
                        android:textColor="@color/ButtonTextColor"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/colorPrimary"
            android:fadingEdge="horizontal"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/_10sdp">


            <!--    android:weightSum="3"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:background="#FFFFFF">

                    <!--        android:background="@color/design_default_color_primary"-->

                    <ImageView
                        android:id="@+id/image_menu3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/toast">

                    </ImageView>

                </FrameLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.0"
                    android:elevation="@dimen/_200sdp">

                    <!--        android:background="@color/colorAccent"-->

                    <TextView
                        android:id="@+id/txt_Title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Sandwich"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_SEO3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_Title3"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Deliciously Cooked like Home"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_rsLabel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_SEO3"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Rs."
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_amount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_SEO3"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/txt_rsLabel3"
                        android:text="280"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_message3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_SEO3"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/txt_amount3"
                        android:text="Per Serving including discount."
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_addToCart3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/txt_message3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/btn_background"
                        android:text="Add to Cart"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/roundededgesbtn"
        android:text="Button"
        app:backgroundTint="@color/ButtonColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>
